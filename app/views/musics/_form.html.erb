    <%= f.label "Описание" %><br>
    <%= f.text_area :description, class: "form-control text-center" %>
  </div>
  <div class="field">
    <%= f.label "Год выпуска" %><br>
    <%= f.text_field :release_year, class: "form-control text-center" %>
  </div>
  <div class="field">
    <%= f.label "Исполнитель" %><br>
    <%= f.text_field :artist, class: "form-control text-center" %>
  </div>
  <div class="field">
    <%= f.label "Изображение альбома" %><br>
    <%= f.file_field :image %>
  </div>
